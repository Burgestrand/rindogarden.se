            <th class="px-2">Datum & Tid</th>
            <th class="px-2">Tema</th>
            <th class="px-2">Vuxna</th>
          </tr>
        </thead>
        <tbody>
          {events.map((event) => (
            <tr class="even:bg-christalle-800">
              <td class="p-2">{event.date} kl.&nbsp;{eventsStore.time.tiny(event)}</td>
              <td class="p-2">{event.data.title ?? "(inget tema 칛nnu)"}</td>
